              "host": ["{{baseUrl}}"],
              "path": ["api", "waste-items"]
            }
          }
        },
        {
          "name": "Update Waste Item (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated description\",\n  \"isRecyclable\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/waste-items/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "waste-items", ":id"],
              "variable": [{ "key": "id", "value": "" }]
