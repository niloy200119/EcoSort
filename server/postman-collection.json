        },
        {
          "name": "Delete Waste Item (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/waste-items/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "waste-items", ":id"],
              "variable": [{ "key": "id", "value": "" }]
            }
          }
        }
      ]
